<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Success">

    <TextView
        android:id="@+id/success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="18dp"
        android:fontFamily="@font/outfitbold"
        android:text="Success stories"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_alignParentRight="true" />

    <ImageButton
        android:id="@+id/arrowleftsuccess"
        android:layout_width="45dp"
        android:layout_height="31dp"
        android:layout_marginTop="48dp"
        android:layout_marginStart="13dp"
        android:background="@null"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:scaleType="centerCrop"
        android:src="@drawable/arrow_left"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@id/success"/>


    <TextView
        android:id="@+id/blog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Blogs"
        android:fontFamily="@font/intersemibold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/success"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/successrecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/blog"/>


</RelativeLayout>