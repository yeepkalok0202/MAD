<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CounsellingService">

    <ImageButton
        android:id="@+id/BtnBackFromCounselling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:contentDescription="Back"
        android:background="@null"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/back" />

    <TextView
        android:id ="@+id/TxtCounselling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "Counselling Service"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/BtnBackFromCounselling"
        android:layout_marginStart="40dp"
        android:layout_marginTop="35dp"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:fontFamily="@font/interbold"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/ImageCounselling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/images__1_"
        android:layout_below="@+id/TxtCounselling"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop = "100dp"
        android:layout_below="@id/ImageCounselling"
        android:background="@drawable/rounded_background">

        <TextView
            android:id="@+id/textStartCounselling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Embrace Healing: \nYour Journey to \nInner Peace Begins Here."
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:fontFamily="@font/interbold"
            android:textColor="@color/black"
            android:textSize="24dp"/>

        <Button
            android:id="@+id/BtnPatient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start now"
            android:textSize="25dp"
            android:textAllCaps="false"
            android:layout_marginTop="180dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/interbold"
            android:backgroundTint="@color/darkblue"/>


    </FrameLayout>


</RelativeLayout>